<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.LocationDetailsActivity">

    <RelativeLayout
        android:layout_width="300sp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/return_login_Button"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="21dp"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@color/primary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="80dp"
            android:text="DONATION DETAILS:"
            android:theme="@style/TextView_for_title" />

        <TextView
            android:id="@+id/time_title"
            style="@style/info_display_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="112dp"
            android:padding="10dp"
            android:text="TimeStamp: XX:XX" />

        <TextView
            android:id="@+id/location_title"
            style="@style/info_display_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="155dp"
            android:padding="10dp"
            android:text="Location: here is an example" />

        <TextView
            android:id="@+id/value_title"
            style="@style/info_display_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="199dp"
            android:padding="10dp"
            android:text="Value: $XX.XX" />

        <TextView
            android:id="@+id/type_title"
            style="@style/info_display_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="244dp"
            android:padding="10dp"
            android:text="Category: put category here" />

        <TextView
            android:id="@+id/description_title_title"
            style="@style/info_display_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="287dp"
            android:padding="10dp"
            android:text="Description:" />

        <ScrollView
            android:id="@+id/description_scroller"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/description_title_title">

            <TextView
                android:id="@+id/address_description"
                style="@style/info_description_text"
                android:layout_below="@+id/type_title"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:text="Put description here. Here is a very long example of a description.
Why? Because IDK maybe some people want to write a super long description. Who knows. Point is that
I've cleverly used a scrollbox to contain someone's annoyingly long description. They thought
that they could beat the system. But they can't. This ain't the matrix BABAY. Bye ho."
                android:textColor="@android:color/black" />

        </ScrollView>


        <Button
            android:id="@+id/back_donation_view_button"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="22dp"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="@color/primary"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>