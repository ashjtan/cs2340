<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="279dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerInside"
            android:src="@drawable/pattern_for_app_theme" />

        <RelativeLayout
        android:layout_width="300sp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/user-editText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="-210dp"
            android:text="@string/username"
            android:textColor="@color/secondary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/user-editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="210dp"
            android:ems="10"
            android:hint="@string/username_here"
            android:inputType="textImeMultiLine|textPersonName" />

        <TextView
            android:id="@+id/password-textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/password"
            android:textColor="@color/secondary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/password_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/password-textView"
            android:ems="10"
            android:hint="@string/password_here"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="132dp"
            android:background="@drawable/round_button"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/no_account"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="50dp"
            android:text="@string/don_t_have_an_account"
            android:textColor="@color/bodyText"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/register_Button"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/no_account"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="157dp"
            android:layout_marginStart="157dp"
            android:background="@android:color/transparent"
            android:gravity="left|center_vertical"
            android:text="@string/register_here"
            android:textAllCaps="false"
            android:textColor="@color/primary"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="34dp"
            app:srcCompat="@drawable/doughnation_img"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

</RelativeLayout>